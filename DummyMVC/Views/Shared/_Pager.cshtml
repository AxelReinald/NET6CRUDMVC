@model Pager


<div class="container btn-group" style="background-color:lightgray; border-radius: 25px; height:45px;">


    <div class="col-5 p-0 justify-content-end mt-1">
        <form asp-controller="@Model.Controller" asp-action="@Model.Action">
            <span class="btn-group">
                <input class="form-control" type="text" name="SearchText"
                       value="@Model.SearchText" placeholder="Search Key" id="searchbox">
                @*<input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search" />*@

                @*<input class="p-1 ml-2 btn btn-sm btn-light" type="button" onclick="onClear()" value="Clear" />*@
            </span>
            <button class="btn btn-info" type="submit" value="Search">Search</button>
            <button type="button" class="btn btn-secondary" onclick="onClear()">Clear</button>
        </form>
    </div>

    <div class="container mt-1">
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">

                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="1">First</a>
                    </li>
                    <li>
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                   asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                }
                @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@pge"> @pge </a>
                    </li>

                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                   asp-route-pg="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                    <li>
                        <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                   asp-route-pg="@(Model.TotalPages)">Last</a>
                    </li>
                }
            </ul>
        }


    </div>

</div>

<script>
    function onClear() {
            $("#searchbox").val('');
            
        }
</script>